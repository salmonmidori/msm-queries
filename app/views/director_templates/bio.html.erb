<h1><%=@position%> #<%=@person.id%> details</h1>

<a href="/<%=@position.downcase%>s">Go back</a>
<hr>
<dl>
  <dt>Name</dt>
  <dd><%=@person.name%></dd>
  <dt>Dob</dt>
  <dd><%=@person.dob%></dd>
  <dt>Bio</dt>
  <dd><%=@person.bio%></dd>
  <dt>Image</dt>
  <img src=<%=@person.image%> alt="<%=@position%>'s headshot">
  <dt>Created at</dt>
  <dd><%=@person.created_at%></dd>
  <dt>Updated at</dt>
  <dd><%=@person.updated_at%></dd>
</dl>


<hr>

<h2>Filmography</h2>

<table border=1>
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>
  <%@movies.each do |movie_x|%>
    <tr>
      <td><%=movie_x.id%></td>
      <td><img src=<%=movie_x.image%> alt="Poster of movie directed by the director"></td>
      <td><%=movie_x.title%></td>
      <td><%=movie_x.year%></td>
      <td><%=@person.name%></td>
      <td><a href="/movies/<%=movie_x.id%>">Show details</a></td>
    </tr>
  <%end%>
</table>
